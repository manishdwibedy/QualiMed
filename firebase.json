{
  "hosting": {
    "public": "dist",
    "predeploy": [
      "npm run build" 
      // OR "vite build"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
